<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.szy.db.mapper.PlanMapper">

    <!--分流计划-->
    <insert id="insertPlan" parameterType="com.szy.db.model.PlanDbo" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO t_plan(grade,species,studentAmount,majorAmount,createTime) VALUES (#{grade}, #{species}, #{studentAmount}, #{majorAmount}, from_unixtime(#{createTime}))
    </insert>

    <select id="selectPlans" resultType="com.szy.db.model.PlanDbo">
        SELECT id,grade,species,studentAmount,majorAmount,unix_timestamp(createTime) FROM t_plan WHERE status > 0
    </select>

    <update id="deletePlan" parameterType="int">
        UPDATE t_plan SET status = 0 WHERE id = #{id}
    </update>

</mapper>